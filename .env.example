# Enterprise RAG System - Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================================================
# Ollama Configuration
# ============================================================================
OLLAMA_PORT=32101
OLLAMA_MODEL=llama3.1:8b-instruct-q5_K_M

# ============================================================================
# Qdrant Vector Database Configuration
# ============================================================================
QDRANT_PORT=6333

# ============================================================================
# Text Embeddings Service Configuration
# ============================================================================
EMBEDDINGS_PORT=8080
EMBEDDINGS_MODEL=sentence-transformers/all-mpnet-base-v2
# Alternative models:
# - sentence-transformers/all-MiniLM-L6-v2 (384 dims, faster, less memory)
# - intfloat/multilingual-e5-base (768 dims, multilingual)
# - intfloat/multilingual-e5-large (1024 dims, better quality, more memory)

# ============================================================================
# MinIO Object Storage Configuration
# ============================================================================
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_NAME=documents

# ============================================================================
# Web UI Configuration
# ============================================================================
WEBUI_PORT=3000

# ============================================================================
# System Configuration
# ============================================================================
COMPOSE_PROJECT_NAME=enterprise-rag
